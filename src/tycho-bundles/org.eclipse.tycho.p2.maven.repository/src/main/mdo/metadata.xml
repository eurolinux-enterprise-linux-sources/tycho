    <class>
      <name>RequiredCapabilities</name>
      <version>1.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>namespace</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true">
          <name>name</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true">
          <name>range</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>

        <field>
          <name>filter</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>false</required>
        </field>

      </fields>
    </class>

    <class>
      <name>TouchpointType</name>
      <version>1.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true">
          <name>version</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
      </fields>
    </class>

    <class>
      <name>TouchpointData</name>
      <version>1.0.0+</version>
      <fields>
        <field xml.tagName="instruction">
          <name>instructions</name>
          <version>1.0.0+</version>
          <association xml.tagName="instruction" xml.itemsStyle="flat">
            <type>TouchpointInstruction</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>true</required>
        </field>
      </fields>
    </class>

    <class>
      <name>TouchpointInstruction</name>
      <version>1.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>key</name>
          <version>1.0.0+</version>
