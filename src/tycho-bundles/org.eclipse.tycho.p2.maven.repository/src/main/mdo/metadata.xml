    </class>


    <class>
      <name>ProvidedCapability</name>
      <version>1.0.0+</version>
      <fields>
        <field xml.attribute="true">
          <name>namespace</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true">
          <name>name</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
        <field xml.attribute="true">
          <name>version</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
        </field>
      </fields>
