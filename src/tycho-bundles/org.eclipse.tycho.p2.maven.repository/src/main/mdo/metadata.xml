<?xml version="1.0" encoding="UTF-8"?>

<model>

  <id>metadata</id>
  <name>Metadata</name>

  <defaults>
    <default>
      <key>package</key>
      <value>org.eclipse.tycho.p2.repository.model.metadata</value>
